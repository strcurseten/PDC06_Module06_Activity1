<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC06_Module06.GeolocationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Geolocation"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Geolocate" Clicked="Start_Locate"></Button>
            <Button Text="Stop Geolocation" Clicked="Stop_Locate"></Button>

            <Label x:Name="resultlocation"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>